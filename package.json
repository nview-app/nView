{
  "name": "nView",
  "version": "2.5.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "test": "node --test",
    "lint": "node scripts/lint.js",
    "format:check": "node scripts/format-check.js",
    "check": "npm run lint && npm run format:check && npm run test -- --experimental-test-coverage"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.nviewer.app",
    "productName": "nView",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "logo/install_banner.bmp",
      "uninstallerSidebar": "logo/install_banner.bmp"
    }
  },
  "overrides": {}
}
