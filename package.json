{
  "name": "nView",
  "version": "3.0.0",
  "main": "main.js",
  "scripts": {
    "start": "npm run build:preload && electron .",
    "build:win": "npm run build:preload && electron-builder --win",
    "package:smoke": "electron-builder --dir -c.asar=false -c.directories.output=dist-smoke",
    "verify:packaged-artifacts": "node scripts/verify-packaged-artifacts.js dist-smoke",
    "test": "node --test",
    "lint": "node scripts/lint.js",
    "format:check": "node scripts/format-check.js",
    "check": "npm run lint && npm run format:check && npm run test -- --experimental-test-coverage",
    "build:preload": "node scripts/build-preload.js",
    "rebuild-native": "node scripts/rebuild-native.js",
    "verify-native": "node scripts/verify-native-addon.js",
    "check:native": "npm run rebuild-native && npm run verify-native",
    "secure-memory:ops-check": "node scripts/secure-memory-ops-check.js"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.nviewer.app",
    "productName": "nView",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "preload-dist/**/*",
      "!dist/**/*",
      "!out/**/*",
      "!coverage/**/*",
      "!backup_files/**/*",
      "!docs/**/*",
      "!test/**/*"
    ],
    "beforePack": "scripts/verify-preload-dist.js",
    "win": {
      "icon": "favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "logo/install_banner.bmp",
      "uninstallerSidebar": "logo/install_banner.bmp"
    },
    "asarUnpack": [
      "native/build/Release/*.node"
    ]
  },
  "overrides": {}
}
